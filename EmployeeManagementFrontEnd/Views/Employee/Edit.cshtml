@model EmployeeSalaryCalculationSystem.MVC.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Employee</h1>
<h4>Update Employee Details</h4>
<hr />

<form asp-action="Edit">
    <div class="row">
        <br />
        <div class="col-md-6"></div>
        <div class="col-md-6 footer-buttons">
            <a asp-action="Index" class="btn btn-outline-default float-right">Back to List</a><span>&nbsp; &nbsp;</span>
            <input type="submit" value="Save" style="margin-right: 5px;" class="btn btn-success float-right" />
        </div>
    </div>
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.EmployeeId)
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EmployeeCode" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="EmployeeCode" class="form-control" />
                <span asp-validation-for="EmployeeCode" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="MobileNo" class="control-label"></label>
                <input asp-for="MobileNo" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PhysicalAddress" class="control-label"></label>
                <input asp-for="PhysicalAddress" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="AccessCode" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="AccessCode" class="form-control" />
                <span asp-validation-for="AccessCode" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EmployeeRoleName" class="control-label"></label>
                <span class="text-danger">*</span>
                <select class="custom-select mr-sm-2">
                    @{
                        if (Model != null && Model.Role.Count > 0)
                        {
                            foreach (var currentRoles in Model.Role)
                            {
                              //  var selectedRolesID = "selected";
                                if (Model.RoleId != 0 && currentRoles.RoleId == Model.RoleId)
                                {
                                    <option value="@currentRoles.RoleId" selected="selected">@currentRoles.RoleName</option>
                                }
                                else
                                {
                                    <option value="@currentRoles.RoleId">@currentRoles.RoleName</option>
                                }

                               
                            }

                        }


                    }
                </select>
                @*<select asp-for="RoleId" asp-items="@(new SelectList(Model.Role,"RoleId", "RoleName", Model.RoleId))" aria-selected="@Model.RoleId" class="custom-select mr-sm-2">
                        <option value="">Please Select</option>
                    </select>*@
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

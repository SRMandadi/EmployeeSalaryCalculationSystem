@model IEnumerable<EmployeeSalaryCalculationSystem.MVC.ViewModels.WorkItemViewModel>

@{
    ViewData["Title"] = "Tasks List";
}

<h1>Task Details</h1>

<p id='btnAdd'>
    <a asp-action="Create" class="btn btn-primary">Add New Task</a>
</p>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th align="center">
                @Html.DisplayName("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.Name))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsTaskCompleted)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="WorkItem" asp-route-id="@item.TaskId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-controller="WorkItem" asp-route-id="@item.TaskId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="WorkItem" asp-route-id="@item.TaskId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
